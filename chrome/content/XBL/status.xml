<?xml version="1.0" encoding="utf-8"?>
<bindings xmlns="http://www.mozilla.org/xbl" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" xmlns:xbl="http://www.mozilla.org/xbl">
    <binding id="glauca-status">
        <content>
            <xul:hbox anonid="glauca-panel-body">
                <xul:vbox anonid="glauca-panel-leftPanel">
                    <xul:vbox anonid="glauca-panel-authorInfo">
                        <xul:image anonid="glauca-panel-authorImage" src="chrome://glauca/skin/user_default.gif" width="50px" height="50px" />
                        <xul:vbox anonid="glauca-panel-authorControl" />
                    </xul:vbox>
                    <xul:vbox anonid="glauca-tweetsControl">
                        <xul:label anonid="glauca-replyBtn" value="评论" class="text-link" />
                        <xul:label anonid="glauca-rtBtn" value="转发" class="text-link" />
                    </xul:vbox>
                </xul:vbox>
                <xul:vbox anonid="glauca-panel-tweet">
                    <xul:hbox anonid="glauca-tweet-authorInfo">
                        <xul:label anonid="glauca-author-name" />
                    </xul:hbox>
                    <xul:vbox anonid="glauca-tweetBody" maxwanonidth='289px' align="start" pack="start" flex="1" style="padding:0px">
                        <xul:description flex='1' anonid="glauca-tweetText"></xul:description>
                        <xul:image anonid="glauca-tweetImage" src="chrome://glauca/skin/ajax-loader.gif" onclick="glauca.overlay.tweetImageClickEvent()" />
                        <xul:vbox anonid="glauca-retweetBody" flex="1">
                            <xul:hbox anonid="glauca-retweet-authorInfo" flex="1" minheight="25px">
                                <xul:image anonid="glauca-panel-retweetAuthorImage" src="chrome://glauca/skin/user_default.gif" wanonidth="25px" height="25px" />
                                <xul:label anonid="glauca-panel-retweetAuthorName" />
                            </xul:hbox>
                            <xul:vbox anonid="glauca-retweetTextBody" flex="1" align="start" pack="center" margin="8px" padding="8px">
                                <xul:description flex='1' anonid="glauca-retweetText"></xul:description>
                                <xul:image onclick='glauca.overlay.rtImageClickEvent(event)' anonid="glauca-retweetImage" src="chrome://glauca/skin/ajax-loader.gif" />
                            </xul:vbox>
                        </xul:vbox>
                    </xul:vbox>
                    <xul:hbox anonid="glauca-tweetInfo" />
                </xul:vbox>
            </xul:hbox>
        </content>
        <implementation>
            <field name="authorImage"/>
            <property name="authorImage">
                <getter><![CDATA[
                document.getAnonymousElementByAttribute(this,'anonid','glauca-panel-authorImage');
        </implementation>
    </binding>
</bindings>
