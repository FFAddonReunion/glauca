{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-eval": false,
    "new-cap": false,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "strict": [2, "global"],
    "curly": [2, "multi-line"]
  }
}